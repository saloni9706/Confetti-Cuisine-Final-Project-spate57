<h1 class="center">Culinary Package Data for
  <%= culinary_vacations.title %>
</h1>
<img src="<%= `/images/${culinary_vacations.heroImage}` %>" alt="heroImage.jpg" style="width: 25vw; min-width: 200px; margin: 10px">
<table class="table">

    <tr>
        <th>Title</th>
        <td>
          <%= culinary_vacations.title %>
        </td>
    </tr>
    <tr>
        <th>Description</th>
        <td>
          <%= culinary_vacations.description %>
        </td>
    </tr>
    <tr>
        <th>Max Travelers</th>
        <td>
          <%= culinary_vacations.maxTravelers %>
        </td>
    </tr>
    <tr>
        <th>Cost</th>
        <td>$
          <%= culinary_vacations.cost %>
        </td>
    </tr>
    <tr>
        <th>Cuisine</th>
        <td>
          <%= culinary_vacations.cuisine %>
        </td>
    </tr>
    <tr>
        <th>Hero image</th>
        <td>
          <%= culinary_vacations.heroImage %>
        </td>
    </tr>
    <tr>
        <th>Destination</th>
        <td>
          <%= culinary_vacations.destination %>
        </td>
    </tr>
    <tr>
        <th>Departure Location</th>
        <td>
          <%= culinary_vacations.departureLocation %>
        </td>
    </tr>
    <tr>
        <th>Departure Date</th>
        <td>
          <%= culinary_vacations.departureDate %>
        </td>
    </tr>
    <tr>
        <th>Return Date</th>
        <td>
          <%= culinary_vacations.returnDate %>
        </td>
    </tr>
</table>


<div>
  <a class="button" href="<%=`/culinary_vacations/${culinary_vacations._id}/edit`%>">
    Edit Package Details
  </a>
</div>
<div>
  <a class="button" href="<%= `/culinary_vacations/${culinary_vacations._id}/delete?_method=DELETE` %>" onclick="return confirm('Are you sure you want to delete this record?')" a>Delete</a>
</div>
<div>
  <a class="button" href="/culinary_vacations">View all packages</a>
</div>
