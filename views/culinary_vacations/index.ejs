<h2 class="center">Culinary Package Table</h2>
<% if (loggedIn) { %>
<div class="center">
  <a class="button" href="/culinary_vacations/new">Create New Culinary Vacation Package</a>
</div>
<% } %>

<% if (!loggedIn) { %>
  <div class="center">
    <p style="color: rgb(153, 72, 72);"><b>Please Login to Create/Update Culinary Vacation Package</b></p>
  </div>
  <% } %>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% culinary_vacations.forEach(culinary_vacation => { %>
    <tr class="row_count">
      <td>
        <a href="<%= `/culinary_vacations/${culinary_vacation._id}` %>">
          <%= culinary_vacation.title %>
        </a>
      </td>
      <td class="vaction_description">
        <%= culinary_vacation.description %>
      </td>
      <td>
        <%  if (loggedIn) { %>
        <a href="<%=`culinary_vacations/${culinary_vacation._id}/edit`%>">
          Edit
        </a>
        <% } %>
      </td>
      <td>
        <%  if (loggedIn) { %>
        <a href="<%= `culinary_vacations/${culinary_vacation._id}/delete?_method=DELETE` %>" onclick="return confirm('Are you sure you want to delete this record?')" a>Delete</a>
        <% } %>
      </td>
    </tr>
    <% }); %>
  </tbody>
</table>
<script>
  $(document).ready(function(){
    debugger;
    total_packegs=$(".row_count").length
    $(".flashes").append('<div class="flash success">Currently there are '+total_packegs+' packages available</div>')
  })
</script>